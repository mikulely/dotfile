[user]
	name = xxxx
	email = xxxxxxxx@gmail.com
[credential]
	helper = cache --timeout=36000000
[color]
    ui = true
[push]
    default = current
[core]
    editor = vim
	excludesfile = /home/xxxxx/.gitignore_global
[http]
	sslVerify = false
[alias]
    ci = commmit -a -v
    co = checkout
    st = status
    throw = reset --hard HEAD
[merge]
	tool = vimdiff
